{
  "name": "text-boldify",
  "displayName": "Text Boldify",
  "description": "Apply bold formatting to selected text based on file type",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:textBoldify.boldify"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "textBoldify.boldify",
        "title": "Boldify Selected Text"
      }
    ],
    "keybindings": [
      {
        "command": "textBoldify.boldify",
        "key": "ctrl+b ctrl+b",
        "mac": "cmd+b cmd+b",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Text Boldify",
      "properties": {
        "textBoldify.customFormats": {
          "type": "object",
          "default": {},
          "description": "Custom bold format templates for each language. Use {text} as placeholder for selected text.",
          "patternProperties": {
            ".*": {
              "type": "string",
              "description": "Bold format template"
            }
          },
          "additionalProperties": {
            "type": "string"
          },
          "markdownDescription": "Map language IDs to bold format templates. Use `{text}` as placeholder.\n\n| Filename | Bold |\n|----------|------|\n| markdown | `**{text}**` |\n| html | `<b>{text}</b>` |",
          "examples": [
            {
              "markdown": "**{text}**",
              "html": "<b>{text}</b>",
              "typescript": "<b>{text}</b>",
              "javascript": "<b>{text}</b>"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}